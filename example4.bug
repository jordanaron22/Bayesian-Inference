model {
    for( i in 1 : N ) {
      Model.index[i] ~ dbern(p)
      Latent[i,1] ~ dnorm(mu1,tau)
      Latent[i,2] ~ dnorm(mu2,tau)
      Data[i] <- Latent[i,Model.index[i]+1]
    }
    p<- 1/2
  	tau <- pow(sigma, -2)
	sigma ~ dunif(0, 100)
    mu1 ~ dnorm(0,.01)
    mu2 ~ dnorm(50,.01)
}
